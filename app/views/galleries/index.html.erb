<h1>Photo Galleries</h1>


<% @galleries.each_with_index do |gallery, i| %>
  <% if i == 0 || i % 3 == 0 %>
    <div class="row">
  <% end %>


  <div class="col-sm-4 gallery_card">
    <%= link_to (image_tag 'photos/'+ gallery.gallery_pic), gallery %><br />
    <%= link_to gallery.gallery_name, gallery %><br />
    <%= gallery.description %>
    <% if session[:current_user] %><br /><%= link_to 'Edit', edit_gallery_path(gallery) %><% end %>
  </div> 

  <% if i > 0 && i == 2 || i == 5 || i == 8 || i == 11 || i == 14 || i == 17 || i == 20 || i == 23 || i == 26 || i == 29 || i == 32 || i == 35 || i == 38 || i == 41 || i == 44 || i == 47 %>
  <!-- close form_row div -->
  </div>
  <% elsif i+1 >= @galleries.size %>
  </div>
  <% end %>
<% end %>
</div>

<br />

<% if signed_in?%>
    <% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "photographer" } %>
       <%= link_to 'New Gallery', new_gallery_path %>
    <% end %>
<% end %>

<% if session[:current_user] %>
<%= link_to 'New Gallery', new_gallery_path %>
<% end %>
