
<div class='row mt'>
  <div class='col-sm-12'>
    <h2><%= "Diff between Version #{@version.id} and Current Version" %></h2>
    <style><%= Diffy::CSS %></style>
    <div class='well diff'>
      <p>
        <strong>Subject:</strong>
        <%= diff(@version.reify.subject, @safety_item.subject) %>
      </p>
      <p>
        <strong>Contents:</strong>
        <%= diff(@version.reify.contents, @safety_item.contents) %>
      </p>
      <p>
        <strong>Resolution:</strong>
        <%= diff(@version.reify.resolution, @safety_item.resolution) %>
      </p>
      <p>
        <strong>Resolved:</strong>
        <%= diff(@version.reify.resolved, @safety_item.resolved) %>
      </p>
    </div>

    <p>
    <%= "Version authored by #{find_version_author_name(@version)} on #{@version.created_at} by '#{@version.event.humanize}'." %>
    </p>
  </div>
</div>
<div class='fr'>
  <%= link_to 'Back', edit_safety_item_path(@safety_item), :class => 'btn btn-danger' %>
  <%= link_to 'Rollback', rollback_safety_item_version_path(@safety_item, @version), :class => 'btn btn-primary', :method => 'put' %>
</div>