<%= form_for(@knowledge_test) do |f| %>
  <% if @knowledge_test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@knowledge_test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @knowledge_test.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <%= f.fields_for :test_questions do |builder| %>
    <%= render "test_question_fields", :f => builder %>
  <% end %>
<p><%= link_to_add_fields "Add Question", f, :test_questions %></p>

  <div class="actions">
    <%= f.submit :data => { :disable_with => "Submitting..." } %>
  </div>

<% end %>
