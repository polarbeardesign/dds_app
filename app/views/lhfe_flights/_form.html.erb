<%= form_for(@lhfe_flight) do |f| %>
  <% if @lhfe_flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lhfe_flight.errors.count, "error") %> prohibited this lhfe_flight from being saved:</h2>

      <ul>
      <% @lhfe_flight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :flight_start_time %><br />
    <%= f.datetime_select :flight_start_time %>
  </div>

    <div class="field">
      <%= f.label :event_id, "Event" %><br />
      <%= f.collection_select :event_id, Event.published.all, :id, :title, options = {:order => 'title ASC', :prompt => true}, html_options = {:class => "styled-select"} %>
    </div>

  <div class="field">
    <%= f.label :aircraft %><br />
    <%= f.collection_select :aircraft_id, Aircraft.all, :id, :name, options = {:order => 'name ASC', :prompt => true}, html_options = {:class => "styled-select"} %>

  </div>
  <div class="field">
    <%= f.label :flight_notes %><br />
    <%= f.text_area :flight_notes, :size => '50x10' %>
  </div>
  <div class="actions">
    <%= f.submit "Create LHFE Flight" %>
  </div>
<% end %>
