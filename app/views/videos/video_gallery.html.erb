<h1>Video Gallery</h1>

<% @videos.each_with_index do |video, i| %>
  <% if i == 0 || i % 3 == 0 %>
    <div class="row">
  <% end %>


  <div class="col-sm-4 gallery_card">
    <%= link_to (image_tag '/uploads/images/' + video.video_graphic), video %><br />
    <%= link_to video.title, video %><br />
    <%= video.date.strftime("%b %d, %Y") %> - <%= video.source %>
    <% if session[:current_user] %><br /><%= link_to 'Edit', edit_video_path(video) %><% end %>
  </div> 

  <% if i > 0 && i == 2 || i == 5 || i == 8 || i == 11 || i == 14 || i == 17 || i == 20 || i == 23 || i == 26 || i == 29 || i == 32 || i == 35 || i == 38 || i == 41 || i == 44 || i == 47 %>
  <!-- close form_row div -->
  </div>
  <% elsif i+1 >= @videos.size %>
  </div>
  <% end %>
<% end %>



<br />

<% if signed_in?%>
    <% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "photographer" } %>
       <%= link_to 'New Video', new_video_path %>
    <% end %>
<% end %>

