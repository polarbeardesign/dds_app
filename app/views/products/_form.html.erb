<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field col-sm-4">
      <%= f.label :name, "Product Name" %>*<br />
      <%= f.text_field :name, :size => 25 %>
    </div>
    <div class="field col-sm-4">
      <%= f.label :item_no %>*<br />
      <%= f.text_field :item_no, :size => 25 %><br /><span class="form_tip">Used for PayPal buttons - e.g. "500"</span>
    </div>
     <div class="field col-sm-4">
      <%= f.label :photo_path %><br />
      <%= f.text_field :photo_path, :size => 25 %><br /><span class="form_tip">e.g. 600.jpg</span>
    </div>
  </div>

  <div class="row">
    <div class="field col-sm-12">
      <%= f.label :description %>*<br />
      <%= f.text_area :description, :size => "50x5"  %>
    </div>
  </div>

  <div class="row">
    <div class="field col-sm-4">
      <%= f.label :value %>*<br />
      <%= f.text_field :value, :size => '10' %><br /> <span class="form_tip">Item's price</span>
    </div>
    <div class="field col-sm-4">
      <%= f.label :alt_value, "Alternate Value" %>*<br />
      <%= f.text_field :alt_value, :size => '10' %><br /> <span class="form_tip">Item's alternate price i.e. Rides price at an event. If no alternate value, enter same as Value</span>
    </div>
    <div class="field col-sm-4">
      <%= f.label :ship_handling %>*<br />
      <%= f.text_field :ship_handling, :size => '10' %><br /><span class="form_tip">Shipping and Handling Charge</span>
    </div>
  </div>

  <div class="row">
    <div class="field col-sm-4">
      <%= f.label :available, "Item Available" %><br />
      <%= f.check_box :available %>
    </div>
    <div class="field col-sm-4">
      <%= f.label :sizes %>*<br />
      <% @sizes.each do |size| %>
        <%= check_box_tag('size_list[]', size.id, @product.sizes.collect {|obj| obj.id}.include?(size.id)) %><%= size.size %><br />
      <% end %>
    </div>

  </div>

  <div class="actions" style="text-align: center;">
    <%= f.submit :data => { :disable_with => "Submitting..." },:class => "btn-default btn btn-big btn-primary" %>
  </div>
<% end %>
