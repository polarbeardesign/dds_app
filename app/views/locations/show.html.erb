<% content_for :sidebar do %>
  <script src="https://maps.google.com/maps?file=api&amp;v=2&amp;key=AIzaSyBTLIEMHnR7-4zunQEj0NYdn0r8e7_fkig"
      type="text/javascript"></script>

  <% map_url = "https://maps.googleapis.com/maps/api/staticmap?zoom=8&size=275x190&maptype=roadmap&markers=color:red%7Clabel:X%7C"+@location.latitude+","+@location.longitude+"&sensor=false&key=AIzaSyBTLIEMHnR7-4zunQEj0NYdn0r8e7_fkig" %>

  <p><strong><%= @location.short_name %> - <%= @location.city %>, <%= @location.state %></strong></p>

  <% if @location.latitude? %>
    <div style="float: right; border: 1px solid #ccc; margin: 1em 0 1em 1em;"><%= link_to image_tag(map_url), "https://www.google.com/maps/search/?api=1&query="+@location.latitude+","+@location.longitude, :target => "_blank" %></div>
  <% end %>
<% end %>

<h1>Location Detail</h1>

<p>
  <b>Name:</b>
  <%= @location.short_name %>
</p>

<p>
  <b>Airport Name:</b>
  <%= @location.airport_name %>
</p>

<p>
  <b>ICAO Identifier:</b>
  <%= @location.icao_identifier %>
</p>

<p>
  <b>City:</b>
  <%= @location.city %>
</p>

<p>
  <b>State:</b>
  <%= @location.state %>
</p>

<p>
  <b>Description:</b>
  <%= @location.description %>
</p>

<p>
  <b>Latitude:</b>
  <%= @location.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @location.longitude %>
</p>

<p>
  <b>Distance fm KGTU (nm):</b>
  <%= @location.one_way_distance %>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
